<div class="masthead">
  <div class="row">
    <div class="col-sx-12 col-sm-6">
      <h3 class="text-muted">Blogolog</h3>
    </div>

    <div class="col-sx-12 col-sm-6">
      <h3 class="pull-right">
        <% if user_signed_in? %>
            <span>Здравствуйте, <%= current_user.email %></span>
            <%= link_to 'Выйти', destroy_user_session_path, :method => :delete %>
        <% else %>
            <%= link_to 'Войти', new_user_session_path %> или <%= link_to 'Зарегистрироваться', new_user_registration_path %>
        <% end %>  
      </h3>  
    </div>  
  </div>  

  <nav>
    <ul class="nav nav-justified">
      <li><%= link_to 'main',  main_index_path %></li>
      <li><%= link_to 'blog',  all_posts_path %></li>
      <li><%= link_to 'tags',  tags_path %></li>
      <li><%= link_to 'gallery',  pictures_path %></li>
      <li><%= link_to 'feedback',  new_message_path %></li>
    </ul>
  </nav>
</div>