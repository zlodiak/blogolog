<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<% if user_signed_in? %>
  <p>
    <strong>likes:</strong>

    <%= form_tag(like_change_path, method: :post, class: 'pull-left') do %>
      <%= hidden_field_tag(:post_id, @post.id) %>
      <%= @likes_count %> 
      <small>(<%= @already_like_message %>)</small>
      <%= submit_tag 'Проголосовать', class: 'btn-sm btn-info' %>
    <% end %>


  </p>
<% end %>


