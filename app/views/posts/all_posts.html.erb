<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
  <h2>Создать пост</h2>
  <%= render 'form' %>
<% end %>

<h1>Listing all Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', user_post_path(post.user_id, post.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate %>


